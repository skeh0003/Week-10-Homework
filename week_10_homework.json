{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Australian Retail Turnover",
    "width": "container",
    "height": "container",
    "params": [
        {
            "name": "Year_selection",
            "value": 2023,
            "bind": {
                "input": "range",
                "min": 2010,
                "max": 2023,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "projection": {
        "type": "equirectangular",
        "center": [
            134,
            -25
        ],
        "scale": 500
    },
    "layer": [
        {
            "data": {
              "url": "./ne_50m.json",
              "format": {
                "type": "topojson",
                "feature": "ne_50m_graticules_30"
              }
            },
            "mark": {
              "type": "geoshape",
              "fillOpacity": 0,
              "stroke": "lightgrey",
              "strokeWidth": 0.5
            }
          },
        {
            "data": {
                "url": "./datatest.csv"
            },
            "transform": [
                {
                    "lookup": "State",
                    "from": {
                        "data": {
                            "url": "./ne_50m.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_50m_admin_1_states_provinces"
                            }
                        },
                        "key": "properties.name"
                    },
                    "as": "geo"
                },
                {
                    "filter": "datum.Year == Year_selection"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white",
                "strokeWidth": 1
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    
                    "field": "Percentage Change from Previous Year",
                    "type": "quantitative",
                    "title": "Change from previous year (%)"
                },
                "tooltip": [
                    {
                        "field": "State",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "Year",
                        "type": "quantitative",
                        "title": "Year"
                    },
                    {
                        "field": "Percentage Change from Previous Year",
                        "type": "quantitative",
                        "title": "Change from previous year (%)",
                        "format": ".2f"
                    }
                ]
            }
        }
    ]
}